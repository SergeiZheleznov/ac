{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": false
    },
    "content": {
      "type": "richtext"
    },
    "published_at": {
      "type": "datetime"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "draft",
        "published"
      ]
    },
    "tags": {
      "collection": "tag",
      "via": "posts",
      "dominant": true
    }
  }
}
