{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": false
    },
    "content": {
      "type": "richtext"
    },
    "published_at": {
      "type": "datetime"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "draft",
        "published"
      ]
    },
    "tags": {
      "via": "posts",
      "collection": "tag",
      "dominant": true
    },
    "author": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "visibility": {
      "type": "enumeration",
      "enum": [
        "public",
        "members",
        "private"
      ]
    },
    "feature_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
